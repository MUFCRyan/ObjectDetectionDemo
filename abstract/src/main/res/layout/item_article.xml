<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:paddingStart="14dp"
  android:paddingEnd="14dp"
  android:paddingTop="10dp"
  android:paddingBottom="10dp"
  android:layout_marginTop="20dp">
  <ImageView
    android:id="@+id/iv_cover"
    android:layout_width="80dp"
    android:layout_height="80dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:background="@color/Red_1"
    />

  <TextView
    android:id="@+id/tv_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toRightOf="@id/iv_cover"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="10dp"
    tools:text="标题"
    />

  <View
    android:id="@+id/view_right_margin_baseline"
    android:layout_width="1dp"
    android:layout_height="1dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    />

  <TextView
    android:id="@+id/tv_content"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="@id/tv_title"
    app:layout_constraintTop_toBottomOf="@id/tv_title"
    app:layout_constraintRight_toLeftOf="@id/view_right_margin_baseline"
    android:layout_marginTop="8dp"
    android:maxLines="3"
    tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
    />

  <TextView
    android:id="@+id/tv_date"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="@id/tv_content"
    app:layout_constraintTop_toBottomOf="@id/tv_content"
    app:layout_constraintRight_toLeftOf="@id/view_right_margin_baseline"
    android:layout_marginTop="8dp"
    android:maxLines="1"
    tools:text="发布于2021年10月1日"
    />
</androidx.constraintlayout.widget.ConstraintLayout>